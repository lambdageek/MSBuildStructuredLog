{
	"name": "msbuild-structuredlog-viewer",
	"private": "true",
	"publisher": "lambdageek",
	"version": "0.0.1",
	"description": "Experimental: MS Build Structured Log Viewer",
	"author": "lambdageek",
	"license": "MIT",
	"engines": {
		"vscode": "^1.71.0"
	},
	"main": "./dist/extension/desktop/extension.js",
	"browser": "./dist/extension/web/extension.js",
	"activationEvents": [],
	"extensionDependencies": [
		"ms-vscode.wasm-wasi-core"
	],
	"contributes": {
		"commands": [
			{
				"command": "start-viewer",
				"category": "msbuild",
				"title": "Start Strctured Log Viewer"
			}
		]
	},
	"scripts": {
		"clean": "npx shx rm -rf dist out ../bin/StructuredLogViewer.Wasi.Engine ../obj/StructuredLogViewer.Wasi.Engine",
		"compile:ts": "tsc -p tsconfig.json --noEmit",
		"build": "npm run compile:ts && npm run build:dotnet && npm run build:esbuild",
		"build:dotnet": "npx shx mkdir -p ./dist && dotnet publish -c Release ../src/StructuredLogViewer.Wasi.Engine/StructuredLogViewer.Wasi.Engine.csproj -bl -p:VSCodeExtensionWasiPublishPath=$PWD/dist",
		"build:esbuild": "node ./script/esbuild.js",
		"test-browser": "vscode-test-web --coi --extensionId ms-vscode.wasm-wasi-core@prerelease --extensionDevelopmentPath=. .",
		"package": "vsce package --pre-release"
	},
	"dependencies": {
		"@vscode/wasm-wasi": "^0.13.0-pre.1"
	},
	"devDependencies": {
		"@types/node": "^20.4.4",
		"@types/vscode": "^1.71.0",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@vscode/test-web": "^0.0.44",
		"@vscode/vsce": "^2.19.0",
		"esbuild": "^0.18.15",
		"eslint": "^8.45.0",
		"npx": "^10.2.2",
		"serve": "^14.2.0",
		"shx": "^0.3.4",
		"typescript": "^5.1.6"
	}
}
